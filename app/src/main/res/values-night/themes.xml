<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Oikos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--AppBar Style -->
        <item name="toolbarStyle">@style/Theme.Oikos.DarkActionBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/marine_blue</item>
        <item name="colorSecondaryVariant">@color/dark_marine_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.Oikos.DarkActionBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="homeAsUpIndicator">@color/white</item>
    </style>
    <style name="Theme.Oikos.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Oikos.RecommendedTabs" parent="Theme.Oikos">
        <item name="android:backgroundTint">@color/black</item>
    </style>
</resources>